{
  "name": "igloocss",
  "version": "0.0.1",
  "description": "Extensible, scalable, Sass-based, OOCS framework which houses inuit.css",
  "main": "main.scss",
  "scripts": {
    "build": "rimraf dist/; yarn run sass; yarn run clean-css; yarn run parker; yarn run styleguide; cp site/* dist",
    "clean-css": "./node_modules/.bin/cleancss -o dist/igloocss/main-min.css dist/igloocss/main.css",
    "parker": "./node_modules/.bin/parker dist/igloocss/main-min.css --format=json | tee dist/igloocss/main-stats.json",
    "postinstall": "yarn run build",
    "prepush": "yarn test",
    "sass": "./node_modules/.bin/node-sass igloocss/main.scss dist/igloocss/main.css",
    "start": "node server.js",
    "styleguide": "./node_modules/.bin/aigis run -c ./aigis_config.yml",
    "stylelint": "stylelint '**/*.scss' --syntax scss --config .stylelintrc",
    "test": "yarn run stylelint"
  },
  "keywords": [
    "oocss",
    "sass",
    "bem",
    "css",
    "itcss"
  ],
  "pre-push": {
    "silent": false
  },
  "author": "Steven Bax (yourownmood)",
  "homepage": "http://igloocss.com",
  "license": "ISC",
  "dependencies": {
    "clean-css": "^3.4.21",
    "express": "^4.15.2",
    "inuitcss": "^6.0.0-beta.5",
    "node-aigis": "^1.2.1",
    "node-sass": "^3.13.0",
    "parker": "0.0.10",
    "pre-push": "^0.1.1",
    "sass-mq": "^3.3.1",
    "stylelint": "7.9.0",
    "stylelint-order": "0.4.3"
  },
  "devDependencies": {
    "husky": "^0.13.3"
  }
}
