{
  "name": "igloocss",
  "version": "0.0.1",
  "description": "Extensible, scalable, Sass-based, OOCS framework which houses inuit.css",
  "main": "main.scss",
  "scripts": {
    "build": "rimraf dist/; npm run sass; npm run clean-css; npm run parker; npm run styleguide; cp static/* dist",
    "clean-css": "./node_modules/.bin/cleancss -o dist/assets/main-min.css dist/assets/main.css",
    "parker": "./node_modules/.bin/parker dist/assets/main-min.css --format=json | tee dist/assets/main-stats.json",
    "postinstall": "npm run build",
    "pre-push": "npm test",
    "sass": "./node_modules/.bin/node-sass main.scss dist/assets/main.css",
    "start": "node server.js",
    "styleguide": "./node_modules/.bin/aigis run -c ./aigis_config.yml",
    "stylelint": "stylelint '**/*.scss' --syntax scss --config .stylelintrc",
    "test": "npm run stylelint"
  },
  "keywords": [
    "oocss",
    "sass",
    "bem",
    "css",
    "itcss"
  ],
  "pre-push": {
    "silent": false
  },
  "author": "Steven Bax (yourownmood)",
  "homepage": "http://igloocss.com",
  "license": "ISC",
  "dependencies": {
    "clean-css": "^3.4.21",
    "express": "^4.15.2",
    "inuitcss": "^6.0.0-beta.4",
    "node-aigis": "^1.2.1",
    "node-sass": "^3.13.0",
    "parker": "0.0.10",
    "pre-push": "^0.1.1",
    "sass-mq": "^3.3.1",
    "stylelint": "7.9.0",
    "stylelint-order": "0.4.3"
  }
}
