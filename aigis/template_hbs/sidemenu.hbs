<div class="aigis-sidemenu">
  <header class="aigis-header">
    <a href="{{root}}index.html">{{config.name}}</a>
  </header>
  <h2 class="aigis-sidemenu__heading">Settings</h2>
  <nav class="aigis-categoryList">
    {{{renderCollectionTree 'settings'}}}
  </nav>
  <h2 class="aigis-sidemenu__heading">Tools</h2>
  <nav class="aigis-categoryList">
    {{{renderCollectionTree 'tools'}}}
  </nav>
  <h2 class="aigis-sidemenu__heading">Generic</h2>
  <nav class="aigis-categoryList">
    {{{renderCollectionTree 'generic'}}}
  </nav>
  <h2 class="aigis-sidemenu__heading">Tags</h2>
  <nav class="aigis-tags aigis-tagList">
    {{# each config.collection.tags}}
      <a class="aigis-tags__item aigis-tags__item--{{this}}" href="{{@root.root}}tags/{{this}}/index.html">{{this}}</a>
    {{/each}}
  </nav>
  <h2 class="aigis-sidemenu__heading"><a href="{{root}}color.html">Colors</a></h2>
</div>
